 * ECR依恋测试小程序 - 设计系统
 * 暖色调瑞士水疗中心风格，高端简约设计
 */

/* ============================================
   色彩变量 - 暖色调调色板
   ============================================ */
:root {
  /* 背景色 */
  --color-bg-primary: #faf9f7;      /* 主背景色 - 浅米白 */
  --color-bg-secondary: #f5f3f0;    /* 次要背景色 */
  --color-bg-tertiary: #f0ede9;     /* 第三背景色 */
  --color-bg-quaternary: #ebe8e2;   /* 第四背景色 */

  /* 文字色 */
  --color-text-primary: #3c3c3c;    /* 主要文字色 */
  --color-text-secondary: #666666;  /* 次要文字色 */
  --color-text-tertiary: #888888;   /* 第三文字色 */
  --color-text-muted: #aaaaaa;      /* 弱化文字色 */

  /* 主色调 */
  --color-primary: #a1887f;         /* 主色 - 暖灰褐 */
  --color-primary-light: #b8a198;   /* 主色浅色 */
  --color-primary-dark: #8a7168;    /* 主色深色 */

  /* 功能色 */
  --color-success: #8f9779;         /* 成功色 - 橄榄绿 */
  --color-warning: #d4af37;         /* 警告色 - 金色 */
  --color-error: #b71c1c;           /* 错误色 - 深红 */
  --color-accent: #8c7b6d;          /* 强调色 */

  /* 边框色 */
  --color-border-light: #e5e0db;    /* 浅边框 */
  --color-border-medium: #d5cfc8;   /* 中边框 */
  --color-border-dark: #c5beb5;     /* 深边框 */
}

/* ============================================
   间距系统 - 8px倍数
   ============================================ */
:root {
  --space-0: 0px;
  --space-1: 8px;    /* 小间距 - 元素内部 */
  --space-2: 16px;   /* 中间距 - 相关组件间 */
  --space-3: 24px;   /* 大间距 - 独立区块间 */
  --space-4: 32px;   /* 特大间距 - 主要区块间 */
  --space-5: 40px;   /* 超大间距 - 页面区块间 */
  --space-6: 48px;   /* 特大间距 - 特殊情况 */

  /* 内边距规范 */
  --padding-card: 20px;      /* 卡片内边距 */
  --padding-button: 12px 24px; /* 按钮内边距 */
  --padding-input: 12px 16px;  /* 输入框内边距 */

  /* 圆角规范 */
  --radius-sm: 4px;    /* 小圆角 */
  --radius-md: 8px;    /* 中等圆角 */
  --radius-lg: 12px;   /* 大圆角 */
  --radius-xl: 16px;   /* 特大圆角 */
  --radius-full: 9999px; /* 圆形 */

  /* 阴影规范 */
  --shadow-sm: 0 1px 3px rgba(161, 136, 127, 0.1);
  --shadow-md: 0 2px 8px rgba(161, 136, 127, 0.1);
  --shadow-lg: 0 4px 16px rgba(161, 136, 127, 0.08);
  --shadow-xl: 0 8px 32px rgba(161, 136, 127, 0.06);
}

/* ============================================
   字体系统 - 无衬线体
   ============================================ */
:root {
  /* 字体大小 */
  --text-xs: 12px;    /* 辅助文本 */
  --text-sm: 13px;    /* 小号正文 */
  --text-base: 14px;  /* 基础正文 */
  --text-md: 16px;    /* 中等正文/小标题 */
  --text-lg: 18px;    /* 大标题 */
  --text-xl: 20px;    /* 特大标题 */
  --text-2xl: 24px;   /* 页面标题 */
  --text-3xl: 48px;   /* 主标题 */

  /* 行高 */
  --leading-tight: 1.2;
  --leading-normal: 1.5;
  --leading-relaxed: 1.6;
  --leading-loose: 1.8;

  /* 字重 */
  --font-weight-light: 300;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
}

/* ============================================
   基础重置和全局样式
   ============================================ */
page {
  background-color: var(--color-bg-primary);
  color: var(--color-text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  font-size: var(--text-base);
  line-height: var(--leading-relaxed);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 移除默认边距 */
view, text, image, button, input, textarea, navigator {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* 链接样式 */
navigator {
  color: var(--color-primary);
  text-decoration: none;
}

navigator:hover {
  color: var(--color-primary-dark);
}

