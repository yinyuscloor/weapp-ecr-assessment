/* 测试页样式 - 流畅答题体验 */

/* 背景图片 */
.page-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.15;
}

/* 页面容器 */
.test-page {
  min-height: 100vh;
  background-color: transparent;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 进度条区域 */
.progress-bar-container {
  margin: 40px auto 0;
  width: 85%;
  height: 6px;
  border-radius: 20px 20px 20px 20px;
  background-color: #e8f7fc;
  overflow: visible;
  position: relative;
}

.progress-bar-fill {
  height: 100%;
  background-color: #13a1c9;
  border-radius: 20px 20px 20px 20px;
  transition: width 0.3s ease;
}

/* 进度指示器图片 */
.progress-indicator {
  position: absolute;
  /* width: 20px; */
  width: 20px;
  height: 20px;
  transform: translateX(-50%) translateY(-50%) rotate(-10deg);
  top: 40%;
  z-index: 1;
  transition: left 0.3s ease;
}

/* 题目区域 */
.question-container {
  display: flex;
  height: 140px;
  justify-content: center;
  align-items: center; 
}

.question-text {
  font-size: 24px;
  margin-left: 30px;
  margin-right: 30px;
  text-align: justify;
}

/* 主要内容区域 */
.test-content {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

/* 选项区域 */
.options-container {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
}

.option-item {
  font-size: 14px;
  height: 40px;
  background-color: transparent;
  border: 0.5px solid #f1f6f9;
  border-bottom: none; 
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 1px;
}

.option-item:last-child {
  border-bottom: 0.5px solid #f1f6f9;
}

.option-item:active {
  background: radial-gradient(circle at center, #e8f7fc 0%, transparent 100%);
}

.option-item.selected {
  background: radial-gradient(circle at center, #e8f7fc 0%, transparent 100%);
}

.option-label {
  flex: 1;
  text-align: left;
  padding: 0 0 0 30px;
}

.option-check {
  width: 20px;
  height: 20px;
  margin-right: 30px;
}

.option-item.selected .option-check {
  color: var(--color-bg-primary);
}


/* 导航区域 */
.navigation-section {
  background-color: transparent;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.nav-button {
  height: 40px;
  width: 100px !important;
  border-radius: 8px;
  font-size: 14px;
  font-weight: var(--font-weight-semibold);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-1);
  box-shadow:
    0 2px 8px rgba(0, 0, 0, 0.1),  /* 原有阴影 */
    0 0 0 1px rgba(0, 0, 0, 0.1),  /* 内边框效果 */
    0 0 20px rgba(0, 0, 0, 0.1) !important;   /* 光晕效果 */
}

.nav-button-prev {
  background-color: var(--color-success);
}

.nav-button-prev:active {
  background: linear-gradient(-90deg, transparent, rgba(24, 144, 255, 0.1));
}

.nav-button-next {
  background-color: var(--color-success);
}

.nav-button-next:active {
  background: linear-gradient(90deg, transparent, rgba(24, 144, 255, 0.1));
}

.nav-button-complete {
  background-color: var(--color-success);
  color: var(--color-bg-primary);
}

.nav-button-complete:active {
  background: linear-gradient(90deg, transparent, rgba(24, 144, 255, 0.1));
}

.nav-button-icon-left {
  width: 20px;
  height: 20px;
  margin-right: 4px;
}

.nav-button-icon-right {
  width: 20px;
  height: 20px;
  margin-left: 4px;
}

.nav-button-icon-complete {
  width: 18px;
  height: 18px;
  margin-left: 1px;
}


/* 响应式调整 */
@media screen and (min-width: 480px) {
  .options-container {
    grid-template-columns: repeat(2, 1fr);
  }

  .option-item {
    height: 60px;
  }
}

@media screen and (min-width: 768px) {
  .test-content {
    max-width: 600px;
    margin: 0 auto;
    width: 100%;
  }

  .options-container {
    grid-template-columns: repeat(3, 1fr);
  }
}