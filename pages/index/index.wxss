/* 首页样式 - 极致简约设计 */

/* 背景图片 */
.page-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.15;
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background-color: transparent;
  padding: var(--space-4) var(--space-2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
  position: relative;
}

/* 标题图片 */
.title-image {
  max-width: 800px;
  height: 100px;
  margin: 26px;
}

/* 描述区域 */
.description-section {
  max-width: 600px;
  margin: 0 auto var(--space-6);
}

.description-text {
  font-size: 14px;
  line-height: 1.8;
  text-align: left;
}

.description-line {
  margin-bottom: 2px;
}

/* 小猫图片 */
.cat-image {
  max-width: 200px;
  height: 100px;
  margin: 22px;
}

/* 操作区域 */
.action-section {
  flex-direction: column;
  align-items: center;
}

.start-button {
  width: 140px !important;
  height: 40px !important;
  background-color: var(--color-primary);
  border-radius: 8px;
  font-size: 14px;
  font-weight: var(--font-weight-semibold);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 2px 8px rgba(0, 0, 0, 0.1),  /* 原有阴影 */
    0 0 0 1px rgba(0, 0, 0, 0.1),  /* 内边框效果 */
    0 0 20px rgba(0, 0, 0, 0.1) !important;   /* 光晕效果 */
  border: 0.5px solid rgba(0, 0, 0, 0.3);
  margin: 12px;
}

.results-button {
  width: 140px !important;
  height: 40px !important;
  background-color: var(--color-primary);
  border-radius: 8px;
  font-size: 14px;
  font-weight: var(--font-weight-semibold);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 2px 8px rgba(0, 0, 0, 0.1),  /* 原有阴影 */
    0 0 0 1px rgba(0, 0, 0, 0.1),  /* 内边框效果 */
    0 0 20px rgba(0, 0, 0, 0.1) !important;   /* 光晕效果 */
  border: 0.5px solid rgba(0, 0, 0, 0.3);
  margin: 12px;
}

.start-button-icon {
  width: 20px;
  height: 20px;
  margin-right: 4px;
  transition: transform 0.3s ease;
}

.results-button-icon {
  width: 20px;
  height: 18px;
  margin-right: 4px;
  transition: transform 0.3s ease;
}

/* 响应式调整 */
@media screen and (max-width: 480px) {
  .page-container {
    padding: var(--space-3) var(--space-1);
  }

  .header-section {
    margin-bottom: var(--space-4);
  }

  .start-button {
    height: 52px;
    font-size: 14px;
  }

  .results-button {
    height: 52px;
    font-size: 14px;
  }

  .cat-image {
    max-width: 150px;
  }
}